@model IEnumerable<Entities.Models.Servicios>

@{
    ViewBag.Title = "Servicios";
}
@if (TempData["message"] != null)
{
    <script>alert('@TempData["message"]');</script>
}
<style type="text/css">


    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #D2D4D7;
        color: black;
    }

    .table-hover tbody tr:hover {
        background-color: #4169e1;
        color: white;
    }
</style>
<h2>Servicios</h2>

<p>
    @Html.ActionLink("Agregar un nuevo servicio", "Create")
</p>
<table class="table table-striped table-hover">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descripción)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.monto)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descripción)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.monto)
            </td>
            <td>
                <a class="btn btn-primary" @Html.ActionLink("Editar", "Edit", new { id = item.id_servicio }) |
              <a class="btn btn-info"     @Html.ActionLink("Detalles", "Details", new { id = item.id_servicio }) |
              <a class="btn btn-danger"     @Html.ActionLink("Eliminar", "Delete", new { id = item.id_servicio })
            </td>
            <td>
                <a href=@Url.Action("Index","Vehiculo", new { id_servicio = item.id_servicio}) class="btn btn-success">
                    Ver Carros
                </a>
            </td>
        </tr>
    }

</table>
