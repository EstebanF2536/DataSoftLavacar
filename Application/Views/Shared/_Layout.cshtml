<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body style=" background-color: white;  font-family: 'Times New Roman'; font-size: 20px;">

  
   
    <div class="navbar navbar-inverse navbar-fixed-top ">
        @*"style="background-color:#4169e1;*@


        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Vehiculos", "Index", "Vehiculo")</li>
                    <li>@Html.ActionLink("Servicios", "Index", "Servicios")</li>
                    <li>@Html.ActionLink("Asignacion de servicio", "Create", "Vehiculo_Servicio")</li>
                </ul>
            </div>
        </div>
    </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
           
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
