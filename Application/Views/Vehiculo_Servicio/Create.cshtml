@model IEnumerable<Entities.Models.Servicios>


@{
    ViewBag.Title = "Vehiculo_Servicio";
}
@if (TempData["message"] != null)
{
    <script>alert('@TempData["message"]');</script>
}

<h2>Agregar servicio a vehiculo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
 
    <div class="form-horizontal">
        <h4>Vehiculo_Servicio</h4>
        <hr />
        <div class="form-group">
            <form>
                <div class="mb-3">
                    <label for="txtplaca" class="form-label">Numero de placa</label>
                    <input type="text" class="form-control" id="txtplaca" name="txtplaca" aria-describedby="placa">
                </div>
            </form>
        </div>

        <hr />

        <div class="form-group">
            @Html.DropDownList("selectServicios", new SelectList(Model, "id_servicio", "Descripción"))
        </div>

        <hr />

        <div class="form-group">
            <div class="">
                <input type="submit" value="Agregar servicio" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
